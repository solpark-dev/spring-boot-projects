<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SocialAccountMapper">
    
    <!-- ResultMap 정의 -->
    <resultMap id="socialAccountSelectMap" type="socialAccount">
        <result property="socialAccountId"  column="social_account_id"  jdbcType="INTEGER"/>
        <result property="userNo"           column="user_no"            jdbcType="INTEGER"/>
        <result property="provider"         column="provider"           jdbcType="VARCHAR"/>
        <result property="providerUserId"   column="provider_user_id"   jdbcType="VARCHAR"/>
    </resultMap>
    
    <!-- SQL : INSERT - 소셜 계정 연동 정보 등록 -->
    <insert id="addSocialAccount" parameterType="socialAccount">
        <selectKey keyProperty="socialAccountId" resultType="int" order="BEFORE">
            SELECT seq_social_account_id.nextval FROM dual
        </selectKey>
        
        INSERT INTO user_social_accounts (
            social_account_id, 
            user_no, 
            provider, 
            provider_user_id
        ) VALUES (
            #{socialAccountId},
            #{userNo},
            #{provider},
            #{providerUserId}
        )
    </insert>
    
    <!-- SQL : SELECT ONE - provider와 provider_user_id로 조회 -->
    <select id="findByProviderAndProviderId" parameterType="map" resultMap="socialAccountSelectMap">
        SELECT 
            social_account_id,
            user_no,
            provider,
            provider_user_id
        FROM user_social_accounts
        WHERE provider = #{provider}
          AND provider_user_id = #{providerUserId}
    </select>
    
    <!-- SQL : SELECT ONE - userNo로 소셜 계정 목록 조회 -->
    <select id="findByUserNo" parameterType="int" resultMap="socialAccountSelectMap">
        SELECT 
            social_account_id,
            user_no,
            provider,
            provider_user_id
        FROM user_social_accounts
        WHERE user_no = #{userNo}
    </select>
    
    <!-- SQL : DELETE - 소셜 계정 연동 해제 -->
    <delete id="deleteSocialAccount" parameterType="int">
        DELETE FROM user_social_accounts
        WHERE social_account_id = #{value}
    </delete>
    
    <!-- SQL : UPDATE - provider_user_id 업데이트 (거의 사용 안 함) -->
    <update id="updateSocialAccount" parameterType="socialAccount">
        UPDATE user_social_accounts
        SET provider_user_id = #{providerUserId}
        WHERE social_account_id = #{socialAccountId}
    </update>

</mapper>